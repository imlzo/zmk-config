#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

// Layers
#define DEFAULT   0
#define LOWER     1
#define RAISE     2
#define ADJUST    3

&mt {
  //  flavor = "tap-preferred";
  tapping_term_ms = <200>;
  retro-tap;
};

/ {

  combos {
    compatible = "zmk,combos";
    combo_esc {
      timeout-ms = <50>;
      key-positions = <0 1>;
      bindings = <&kp ESC>;
    };

    combo_tab {
      timeout-ms = <50>;
      key-positions = <10 11>;
      bindings = <&kp TAB>;
    };

    combo_ralt {
      timeout-ms = <50>;
      key-positions = <17 16>;
      bindings = <&kp RALT>;
    };

    combo_lalt {
      timeout-ms = <50>;
      key-positions = <11 12>;
      bindings = <&kp LALT>;
    };

    combo_lgui {
      timeout-ms = <50>;
      key-positions = <12 13>;
      bindings = <&kp LGUI>;
    };


    combo_rgui {
      timeout-ms = <50>;
      key-positions = <17 18>;
      bindings = <&kp RGUI>;
    };



  };

  keymap {
    compatible = "zmk,keymap";

    layer_default {
      bindings = <
        &kp Q &kp W &kp E &kp R &kp T 						&kp Y &kp U  &kp I    &kp O   &kp P
        &mt LCTL A &kp S &kp D &kp F &kp G 			      &kp H &kp J &kp K &kp L &mt RCTL SCLN
        &mt LSFT Z &kp X &kp C &kp V &kp B			  &kp N &kp M  &kp CMMA &kp DOT &mt LSFT SLASH
        &kp LGUI &lt LOWER SPC                    &lt RAISE SPC &kp RALT
        >;
    };

    layer_lower {
      bindings = <
        &kp NUM_1  &kp NUM_2    &kp NUM_3    &kp NUM_4    &kp NUM_5		&kp NUM_6 &kp NUM_7 &kp NUM_8 &kp NUM_9 &kp NUM_0
        &kp TAB    &trans       &trans       &trans       &trans		  &kp LEFT  &kp DOWN  &kp UP    &kp RIGHT &trans
        &trans     &trans 	    &trans       &trans       &trans 	    &trans    &trans    &trans    &trans    &trans
        &kp LGUI &lt ADJUST SPC                    &lt ADJUST SPC &kp RALT
        >;
    };

    layer_raise {
      bindings = <
        &kp GRAVE   &trans 	    &trans       &trans       &trans 	    &trans      &kp MINUS     &kp KP_EQUAL &kp LBRC   &kp RBRC
        &kp TAB     &trans      &trans       &trans       &trans		  &kp LEFT    &kp DOWN      &kp UP       &kp RIGHT  &kp BKSP
        &kp TAB     &trans      &trans       &trans       &trans		  &trans      &trans        &trans       &trans     &kp ENTER
        &kp LGUI &lt ADJUST SPC                    &lt ADJUST SPC &kp RALT
        >;
    };

    layer_adjust {
      bindings = <
        &kp NUM_1  &kp NUM_2    &kp NUM_3    &kp NUM_4    &kp NUM_5 			&trans &trans   &trans   &trans  &trans
        &kp F1 &kp F2 &kp F3 &kp F4 &kp F5  						&trans &kp PG_UP  &kp K_VOL_UP &kp K_MUTE &trans
        &bt BT_CLR  &bt BT_NXT &bt BT_PRV &kp F6 &kp F7   				&trans &kp PG_DN  &kp K_VOL_DN  &trans &trans
        &trans &trans  					&trans &trans
        >;
    };

  };
};
